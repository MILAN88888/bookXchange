<div id="profile-div">
    <form id="profile-form" method="post" action="action.php" enctype="multipart/form-data">
        <img src="../Upload/Users/{{user.image}}" width="100px" height="100px" style="border-radius:50px;" /><br>
        <input hidden name="old_image" value="{{user.image}}">
        <input class="profile" type="file" id ="new_user_image" name="newimage" ><br>
        <input class="profile" type="text" id="user_name" value="{{user.user_name}}" name="user_name" /><br>
        <input  hidden name="old_number" value="{{user.mobile_no}}"/>
        <input class="profile" type="text" id="user_phone" value="{{user.mobile_no}}" name="user_phone" /><br>
        <input class="profile" type="text" id="user_address" value="{{user.address}}" name="user_address" /><br>
        <input  hidden name="old_email" value="{{user.email}}"/>
        <input class="profile" type="text" id="user_email" value="{{user.email}}" name="user_email" /><br>
        <input class="profile" type="submit" id="update_user" name="updateprofile" value="save"/>
        </form>
        <a style="cursor:pointer;text-decoration:underline;color:blue" id="reset-pass-btn">Reset password</a>
</div>
<div id="reset-password-div">
    <p><b>______Reset Password______</b></p>
    <form id="reset-password-form" action="action.php" method="post" autocomplete="off">
        <input type="password" name="old_user_password" placeholder="Enter Old Password" autocomplete="off">
        <input type="password" name="new_user_password" placeholder="Enter New Password">
        <br>
        <br>
        <input type="submit" name="reset_new_password" value="submit">
    </form>
  
</div>
<style>
    .profile{
        width:400px;
        word-wrap: break-word;
        height: 40px;
        border-radius: 20px;
        margin-top: 5px;
        border-color: #990033;

    }
    #profile-div{
        justify-items: center;
        position: relative;
        left:40%;
    }
    .error{
        color:red;
    }
    #reset-password-div {
        display: none;
        width: 400px;
        border: 1px solid green;
        border-radius: 50px;
        margin-left: 40%;
        text-align: center;
        padding: 50px;
        margin-top: 100px;
    }
</style>
<script src="{{ baseurl }}js/profile.js"></script>
<script>
    $('#reset-pass-btn').click(function(){
        $('#reset-password-div').show();
        $('#profile-div').hide();
    })
    $('#reset-password-form').validate({
        rules:{
            old_user_password:{
                required:true,
                minlength:5,
            },
            new_user_password:{
                required:true,
                minlength:5,
            }
        },messages:{
            old_user_password:{
                required:"Enter old password",
                minlength:"At least 5 character",
            },
            new_user_password:{
                required:"Enter new passowrd",
                minlength:"At least 5 character",
            }
        }
    })
</script>