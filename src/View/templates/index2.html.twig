  <section class="product-items-slider section-padding cart-bg">
    <div class="container">
      <div class="section-header mb-4">
        <h5 class="header title">Recently Books <a class="float-right text-secondary pointer">View All</a></h5>
      </div>
      <div class="row rgiven-content">
        {% for book in bookList %}
        <div class="product">
          <a>
            <div class="product-header">
              <img class="img-fluid pointer" src="src/Upload/Books/{{book.image}}" alt="{{book.book_name}}">
            </div>
            <div class="product-body pt-2">
              <h5 class="pointer">{{book.book_name}}</h5>
              <h6><span class="mdi mdi-pen pointer"></span>{{ book.author }}</h6>
            </div>
            <div class="product-footer mb-4">

              <p class="star-rating mb-0">
                {% set sval = book.rating %}

                {% for i in range(1,5) %}

                {% if i <= sval %} <i class="mdi mdi-star mr-2"></i>
                  {% endif %}

                  {% if ( i - sval ) == 0.5 %}

                  <i class="mdi mdi-star-half mr-2"></i>

                  {% set sval = sval  + 0.5 %}
               
                  {% endif %}
                  {% if i > sval %}
                  <i class="mdi mdi-star-outline mr-2"></i>
                  {% endif %}
                  {% endfor %}
              </p>

            </div>
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

