
{% for book in books %}
<div style="display: inline-block">
<div class="row d-flex  mx-1">
<div class="card" style="width: 15rem;">
    <img src="../Upload/Books/{{ book.image }}" width="100px" height="100px" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{ book.book_name }}</h5>
      <p class="card-text">Author : {{ book.author}} <br>Edition : {{ book.edition }}<br> Status : {{ book.status }} <br> Rating : {{ book.rating }}</p>
      <a href="#" class="btn btn-primary">Details</a>
    </div>
  </div>
</div>
</div>
{% endfor %}

